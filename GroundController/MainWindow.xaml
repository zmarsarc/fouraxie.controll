<Window x:Class="GroundController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="clr-namespace:System.Windows.Interop;assembly=PresentationCore"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Image x:Name="imgelt" 
               Mouse.MouseMove="imgelt_MouseMove"
               Mouse.MouseWheel="imgelt_MouseWheel">
            <Image.Source>
                <i:D3DImage x:Name="d3dimg" />
            </Image.Source>
        </Image>
        <Button Click="Button_Click" Width="50" Height="20" RenderTransformOrigin="-0.74,0.7" HorizontalAlignment="Right" VerticalAlignment="Bottom">reset</Button>
    </Grid>
</Window>
